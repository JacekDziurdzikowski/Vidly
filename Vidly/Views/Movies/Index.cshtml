@model Vidly.Models.MovieList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("New movie", "MovieForm", null, new { @class = "btn btn-primary" })
<ul>
    @foreach (var movie in Model.movieList)
    {
        <li>
            @Html.ActionLink(@movie.Name, "MovieForm", new { id = movie.Id })
        </li>
        <li>
            @movie.Genre.Name
        </li>
    }
</ul>

